{
  "name": "@adobe/alloy",
  "private": true,
  "version": "2.27.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:functional:build:prod": "npm run build --workspaces --if-present",
    "add-license": "npm run --workspaces --if-present add-license",
    "test:unit": "npm run --workspaces --if-present test:unit",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ],
    "*.{html,js,cjs,mjs,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
