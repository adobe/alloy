{
  "name": "a-tag",
  "version": "0.0.1",
  "description": "A-Tag - Unified JS library",
  "main": "src/main.js",
  "scripts": {
    "prepush-msg": "echo 'Running pre-push scripts...' && exit 0",
    "precommit-msg": "echo 'Running pre-commit scripts...' && exit 0",
    "clean": "rimraf dist",
    "lint-src": "eslint src/**",
    "lint-test": "eslint test/functional/** test/unit/**",
    "lint": "npm run lint-src && npm run lint-test",
    "format": "prettier --write \"{src,test}/**/*.js\"",
    "buildBrowsers": "docker build -t browsers -f Docker/browsers/Dockerfile .",
    "test": "karma start --single-run",
    "testDockerChrome": "xvfb-run --server-num=99 --server-args='-ac -screen 0 1024x768x16' npm run test",
    "test:watch": "karma start",
    "testcafe": "node test/functional/helpers/runner.js",
    "functional": "BROWSERS='chrome,firefox' TEST_FILES='test/functional/specs/**/*.js' npm run testcafe",
    "functional-sl": "TEST_FILES='test/functional/specs/**/*.js' npm run testcafe",
    "prebuild": "npm run clean && npm run format && npm run lint",
    "build": "rollup -c",
    "prebuild:prod": "npm run prebuild",
    "build:prod": "rollup -c rollup.prod.config.js",
    "build:watch": "rollup -c -w",
    "sandbox": "cd sandbox && npm start",
    "sandbox:build": "cd sandbox && npm run build",
    "dev": "npm-run-all --parallel build:watch sandbox"
  },
  "repository": {
    "type": "git",
    "url": "git@git.corp.adobe.com:Activation/a-tag.git"
  },
  "author": "Adobe Inc.",
  "license": "Apache-2.0",
  "pre-commit": [
    "precommit-msg",
    "format",
    "lint"
  ],
  "pre-push": [
    "prepush-msg",
    "test"
  ],
  "dependencies": {
    "@adobe/reactor-cookie": "^1.0.0",
    "@adobe/reactor-document": "^1.0.0",
    "@adobe/reactor-promise": "^1.0.0",
    "@adobe/reactor-window": "^1.0.0",
    "mitt": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/preset-env": "^7.3.1",
    "babel-loader": "^8.0.5",
    "dotenv": "^6.2.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-testcafe": "^0.2.1",
    "glob": "^7.1.3",
    "http-server": "^0.11.1",
    "is-docker": "^1.1.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-matchers": "^4.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^4.0.0-rc.6",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "prettier": "^1.16.4",
    "puppeteer": "^1.14.0",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-license": "^0.8.1",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "testcafe": "^1.0.1",
    "testcafe-browser-provider-saucelabs": "^1.6.1",
    "testcafe-live": "^0.1.4",
    "webpack": "^4.29.6"
  }
}
