{
  "name": "a-tag",
  "version": "0.0.1",
  "description": "A-Tag - Unified JS library",
  "main": "src/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint-src": "eslint src/**",
    "lint-test": "eslint tests/**",
    "lint": "npm run lint-src && npm run lint-test",
    "format": "prettier --write \"{src,tests}/**/*.js\"",
    "test": "karma start",
    "prebuild": "npm run clean && npm run format && npm run lint",
    "build": "rollup -c && npm run copy-to-sandbox",
    "build:sandbox": "cd sandbox && npm run build",
    "copy-to-sandbox": "cp dist/atag.js sandbox/public/",
    "sandbox": "npm run build && cd sandbox && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git@git.corp.adobe.com:Activation/a-tag.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@adobe/reactor-window": "^1.0.0",
    "@adobe/reactor-cookie": "^1.0.0",
    "@adobe/reactor-promise": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-matchers": "^4.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^3.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "testcafe": "^1.0.0",
    "webpack": "^3.12.0"
  }
}
