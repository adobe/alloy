{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "checkJs": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@adobe/alloy-core": ["../core/src/index.js"],
      "@adobe/alloy-core/*": ["../core/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "distTest"]
}
